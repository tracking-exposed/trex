{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "target": "ES3",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "rootDir": "./",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "sourceMap": true,
    "typeRoots": ["../node_modules/@types", "node_modules/@types"],
    "paths": {
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["./src"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}
