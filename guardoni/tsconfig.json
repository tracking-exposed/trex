{
  "extends": "../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": false,
    "target": "ES3",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "../build/ts",
    "baseUrl": "../",
    "rootDir": "../",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["../node_modules/@types", "node_modules/@types"]
  },
  "include": [".", "./package.json"],
  "exclude": [
    "reload.js",
    "node_modules",
    "bin",
    "build",
    "dist",
    "jest.config.js",
    "webpack.config.ts"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    {
      "path": "../packages/shared"
    }
  ]
}
