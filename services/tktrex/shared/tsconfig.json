{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2015",
    "paths": {
      "@shared/*": ["../../../../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../../../shared"
    }
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
