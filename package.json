{
  "description": "installs all the YCAI dependencies and YCAI",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 16",
    "npm": "use yarn!",
    "yarn": ">= 3"
  },
  "private": true,
  "workspaces": [
    "extension",
    "shared",
    "packages/*",
    "backend",
    "YCAI",
    "services/tktrex/extension",
    "services/tktrex/methodology",
    "services/tktrex/backend",
    "services/tktrex/shared",
    "guardoni"
  ],
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "clean": "yarn workspaces foreach run clean",
    "lint": "yarn workspaces foreach run lint",
    "build": "yarn workspaces foreach run build",
    "test": "jest",
    "taboule": "yarn workspace @trex/taboule",
    "shared": "yarn workspace shared",
    "backend": "yarn workspace yttrex-backend",
    "extension": "yarn workspace yttrex-extension",
    "guardoni": "yarn workspace guardoni",
    "ycai": "yarn workspace YCAI",
    "lint-staged": "lint-staged",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^16.11.19",
    "@types/prettier": "^2.4.2",
    "eslint": "^8.6.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .tsx --ext .ts --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
