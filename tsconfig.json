{
  "extends": "./config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "module": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "lib": ["dom", "ESNext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./packages/shared/node_modules/@types",
      "./backend/node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./typings",
    "./config/typescript/**/*",
    "./packages/shared/**/*",
    "./packages/taboule/**/*",
    "./backend/**/*",
    "./extension/**/*",
    "./guardoni/*",
    "./YCAI/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/build/*",
    "**/jest.base.config.js",
    "**/jest.config.js",
    "**/webpack*.ts",
    "**/webpack*.js"
  ]
}
