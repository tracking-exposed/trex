{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "outDir": "build",
    "target": "es5",
    "jsx": "react",
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": ["dom", "ESNext"],
    "typeRoots": [
      "../../node_modules/@types",
      "../../shared/node_modules/@types",
      "./node_modules/@types",
      "./typings"
    ],
    "rootDir": "./src",
    "baseUrl": "./src",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "paths": {
      "@shared/*": ["../../shared/src/*"],
      "@yttrex/shared/*": ["../../../platforms/yttrex/shared/src/*"],
      "@tktrex/shared/*": ["../../../platforms/tktrex/shared/src/*"]
    }
  },
  "include": ["./src", "./typings"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    { "path": "../shared" },
    {
      "path": "../../platforms/yttrex/shared"
    },
    {
      "path": "../../platforms/tktrex/shared"
    }
  ]
}
