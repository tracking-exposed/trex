{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./bin",
    "./lib",
    "./parsers",
    "./routes",
    "./utils"
  ],
  "exclude": ["./tests"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}

