{
  "extends": "../config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "rootDir": "../",
    "baseUrl": "../",
    "outDir": "../build/ts",
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "config",
    "dump",
    "node_modules",
    "thumbnails",
    "jest.config.js",
    "jest.setup.js"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "references": [
    {
      "path": "../packages/shared"
    }
  ]
}
