{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "paths": {
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["./bin", "./lib", "./parsers", "./routes", "./utils"],
  "exclude": ["./tests"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}
