{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./build/ts",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2015",
    "paths": {
      "@shared/*": ["../../../../packages/shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../../../packages/shared"
    }
  ],
  "include": ["./src"],
  "exclude": ["./jest.config.js", "./webpack.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
