{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../../../packages/shared/src/*"]
    }
  },
  "include": [
    "./bin",
    "./lib",
    "./models",
    "./parsers",
    "./routes",
    "./utils",
    "./tests"
  ],
  "exclude": ["./tests"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [
    {
      "path": "../../../packages/shared"
    }
  ]
}
