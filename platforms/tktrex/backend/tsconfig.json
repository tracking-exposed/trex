{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tktrex/shared/*": ["../shared/src/*"],
      "@shared/*": ["../../../packages/shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../../../packages/shared"
    },
    {
      "path": "../shared"
    }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "./bin",
    "./lib",
    "./models",
    "./routes",
    "./test",
    "**/__tests__"
  ],
  "exclude": ["node_modules", "build"]
}
