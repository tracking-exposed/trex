{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": false,
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../../../packages/shared/src/*"],
      "@tktrex/shared/*": ["../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../../../packages/shared"
    },
    {
      "path": "../shared"
    }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./bin", "./lib", "./models", "./routes"],
  "exclude": ["node_modules", "build", "jest.config.js", "**/__tests__"]
}
