{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES5",
    "paths": {
      "@shared/*": ["../../../../packages/shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../../../packages/shared"
    }
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build", "jest.config.js", "jest.setup.js"]
}
