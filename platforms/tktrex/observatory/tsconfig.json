{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "./src",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2015",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.json"],
  "exclude": ["node_modules", "build"]
}
