{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "strict": true,
    "noEmit": false,
    "target": "EsNext",
    "module": "es2020",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "./build/ts",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types",
      "./typings"
    ],
    "paths": {
      "@shared/*": ["../../../packages/shared/src/*"],
      "@yttrex/shared/*": ["../../yttrex/shared/src/*"],
      "@tktrex/shared/*": ["../../tktrex/shared/src/*"]
    }
  },
  "include": ["./src", "__mocks__", "__tests__", "./test", "./typings"],
  "exclude": ["node_modules", "build", "dist"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../yttrex/shared"
    },
    {
      "path": "../tktrex/shared"
    }
  ]
}
